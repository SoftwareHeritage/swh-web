import argparse

from swh.web.ui import main


# Default configuration file
DEFAULT_CONF_FILE = '~/.config/swh/webapp.ini'


def parse_args():
    """Parse the configuration for the cli.
    """
    cli = argparse.ArgumentParser(description="SWH's web ui.")
    cli.add_argument('--verbose', '-v', action='store_true',
                     help='Verbosity level in log file.')
    cli.add_argument('--config', '-c', help='configuration file path')

    args = cli.parse_args()

    return args


if __name__ == '__main__':
    args = parse_args()
    config_path = args.config or DEFAULT_CONF_FILE

    main.run_debug_from(config_path, args.verbose)
